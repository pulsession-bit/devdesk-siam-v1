
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // RÈGLES DE SÉCURITÉ SIAM VISA PRO (PRODUCTION)
    
    // 1. CLIENTS : Isolation stricte des données personnelles
    match /customers/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      match /checkout_sessions/{id} {
         allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /payments/{id} {
         allow read: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // 2. SESSIONS (AUDIT & CHAT)
    match /sessions/{sessionId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && (
        resource.data.ownerUid == request.auth.uid || 
        request.resource.data.ownerUid == request.auth.uid
      );
      
      match /events/{eventId} {
        allow read, write: if request.auth != null; // Restreindre au ownerUid idéalement
      }
    }
    
    // 3. RENDEZ-VOUS
    match /appointments/{id} {
      allow create: if true; // Permet la réservation invité
      allow read, update: if request.auth != null;
    }
    
    // 4. SYSTÈME MAIL (Extension Firebase)
    match /mail/{id} {
      allow create: if true;
    }
  }
}
